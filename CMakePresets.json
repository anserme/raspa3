{
    "version" : 2,
    "cmakeMinimumRequired" : {
      "major" : 3,
      "minor" : 28,
      "patch" : 0
    },
    "configurePresets": [
      {
        "name" : "base",
        "description" : "Sets generator, build and install directory, vcpkg",
        "hidden" : true,
        "generator" : "Ninja",
        "binaryDir" : "${sourceDir}/build/${presetName}"
      },
      {
        "name" : "macos-intel",
        "description" : "Sets compilers, build type",
        "inherits" : [ "base" ],
        "cacheVariables" : {
          "CMAKE_OSX_ARCHITECTURES" : "x86_64", 
          "CMAKE_BUILD_TYPE" : "Release",
          "CMAKE_CXX_COMPILER" : "clang++",
          "CMAKE_EXE_LINKER_FLAGS" : "-fuse-ld=lld",
          "CMAKE_INSTALL_PREFIX" : "/usr/local",
          "CMAKE_CXX_FLAGS_RELEASE" : "-stdlib=libc++ -fvisibility=hidden -fexperimental-library -Xclang -fopenmp -g -O3 -march=core-avx2 -mfma  -fomit-frame-pointer -ffast-math",
          "OpenMP_CXX_FLAGS" : "-Xclang -fopenmp",
          "OpenMP_libomp_LIBRARY" : "/usr/local/Cellar/libomp/18.1.7/lib/libomp.a",
          "CMAKE_BUILD_WITH_INSTALL_RPATH" : true,
          "BUILD_MAC_PACKAGE" : true,
          "BUILD_TESTING" : true
        },
        "vendor" : {
            "microsoft.com/VisualStudioSettings/CMake/1.0" : {
              "hostOS" : [ "macOS" ]
            }
          }
      },
      {
        "name" : "macos-intel-debug",
        "description" : "Sets compilers, build type",
        "inherits" : [ "base" ],
        "cacheVariables" : {
          "CMAKE_OSX_ARCHITECTURES" : "x86_64", 
          "CMAKE_BUILD_TYPE" : "Debug",
          "CMAKE_CXX_COMPILER" : "clang++",
          "CMAKE_EXE_LINKER_FLAGS" : "-fuse-ld=lld",
          "CMAKE_INSTALL_PREFIX" : "/usr/local",
          "CMAKE_CXX_FLAGS_RELEASE" : "-stdlib=libc++ -fvisibility=hidden -fexperimental-library -Xclang -fopenmp -g3 -O0 -DDEBUG -fno-omit-frame-pointer -fno-optimize-sibling-calls -fsanitize=address -fsanitize=leak -fsanitize=undefined",
          "OpenMP_CXX_FLAGS" : "-Xclang -fopenmp",
          "OpenMP_libomp_LIBRARY" : "/usr/local/Cellar/libomp/18.1.7/lib/libomp.a",
          "CMAKE_BUILD_WITH_INSTALL_RPATH" : true,
          "BUILD_MAC_PACKAGE" : true,
          "BUILD_TESTING" : true
        },
        "vendor" : {
            "microsoft.com/VisualStudioSettings/CMake/1.0" : {
              "hostOS" : [ "macOS" ]
            }
          }
      },
      {
        "name" : "macos-apple-silicon",
